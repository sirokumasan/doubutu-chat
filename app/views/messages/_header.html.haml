          =current_user.name   
          %ul.dropdown
            %li
              = link_to "ログアウト", logout_path, method: :delete, class:"hiddon"
        - else
          USER
          %ul.dropdown
            %li
              = link_to "新規登録", new_user_path, class:"hiddon"
            %li
              = link_to "ログイン", login_path, class:"hiddon"

            = link_to "Home", "#", class: "nav-link" 
        -# %span.sr-only (current) 
      %li.nav-item
        = link_to "Link", "#", class:"nav-link"
      %li.nav-item
        = link_to "Disabled", "#", class: "nav-link disabled"
    %form.form-inline.my-2.my-lg-0
      %input.form-control.mr-sm-2{:placeholder => "Search", :type => "search"}/
      %button.btn.btn-outline-success.my-2.my-sm-0{:type => "submit"} Search


