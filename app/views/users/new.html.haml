#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Create Account
      %h5 新規アカウントの作成
      = link_to "ログイン", login_path, class: 'btn'
      = link_to "トップページ", root_path, class: 'btn'
    .account-page__inner--right.user-form
      = form_for @user do |f|
        = render 'shared/error_messages'
        .field#field__image
          .field-label
            %label{class: "flexbox", action: request.path}
              -# =label :プロフィール写真を載せてください,{class: "flexbox", action: request.path}
              .field-label__image
                %p.pfofiel--text プロフィール写真を載せてください
                %f{class: "fas fa-camera pfofiel"}
                = f.file_field :pfofiel, {class: "file-field",id: "pfofiel__image", type: "file"}
        .field
          .field-label
            = f.label :name
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email
        .field
          .field-label
            = f.label :password
            %i (英数字8文字以上)
          .field-input
            = f.password_field :password, autocomplete: "off"
        .field
          .field-label
            = f.label :password_confirmation
          .field-input
            = f.password_field :password_confirmation, autocomplete: "off"
        .actions
          = f.submit "Create Account", class: 'btn'
