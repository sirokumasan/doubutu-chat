-# %p Find me in app/views/sessions/new.html.haml
#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Log in
      %h5 登録しているユーザーでログイン
      = render "devise/shared/links"
    .account-page__inner--right.user-form
      -# =scope::session form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      -# = form_for( url: login_path, scope::session) do |f|
      = form_for :session, url: login_path do |f|
        .field 
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email, autofocus: true
          .field
            .field-label
              = f.label :password
              %i (英数字8文字以上)
            .field-input
              = f.password_field :password, autocomplete: "off"
          -# .field-label
          -#   = f.label :remember_me
          .field-input
            = f.check_box :remember_me
            %span.remember_me ログイン情報保存しますか
          .actions
            = f.submit "Log in", class: 'btn'

